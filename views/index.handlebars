<div class="container">
  <div class="jumbotron text-center">

    <h1>Nom A Burger!</h1>

  </div>

  <div class="text-center">
    <img src="../public/assets/img/catburger.jpg" class="img-thumbnail" alt="Cat Nomming Burger">
  </div>

  <br>
  <hr>

  <h2>Enter A Burger</h2>

  <ul>
    {{#each burgers}}
    {{#unless devour}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Devoured Burgers!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devour">Devour?</label><br>
      <input type="radio" name="devour" value="1" checked> Nommmmed!<br>
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>