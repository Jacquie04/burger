<div class="container">
  <div class="jumbotron text-center">

    <h1 id="titlePage">Nom A Burger!</h1>

  </div>

  <div class="text-center">
    <img src="/assets/img/catburger.jpg" class="img-thumbnail" alt="Cat Nomming Burger">
  </div>

  <br>
  <hr>

  <div class="container text-center">
    <div class="row  justify-content-around">
      <div class="col-6" id="enter">
        <h2>Entered Burgers...</h2>

        <ul class="list-group">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>

      <div class="col-6" id="eaten">
        <h2>Devoured Burgers!</h2>

        <ul class="list-group list-group-flush"> 
          {{#each burgers}}
          {{#unless devoured}}
          <li class="list-group-item">
          {{burger_name}}
          </li>
          {{/unless}}
          {{/each}}
        </ul>

      </div>
    </div>
     
  </div>
  <br>
  <hr>
  <div class="container text-center">
    <h2>Add a Burger</h2>
    <form class="create-form">
      <br>
      <div class="form-group">
        <label for="ca">Burger Name :</label>
        <input type="text" id="ca" name="name">
      </div>
      <br>
      <button id="submit" class="btn" type="submit">Add Burger</button>
    </form>
    <br>
  </div>
  <br>
</div>